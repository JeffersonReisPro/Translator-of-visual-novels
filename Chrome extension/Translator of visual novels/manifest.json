{
	"background": {
		"scripts": [ "background.js" ]
	},
	//
	"manifest_version": 2,
	"name": "Translator of visual novels",
	"version": "0.0.1",
	//
	//"default_locale": "en",
	"description": "This plug in for Google chrome translates visual novels made in tyranobuilder.",
	"icons": {
		"48": "img/logo.png",
		"72": "img/logo.png"
	},
	"browser_action": {
		"default_title": "Translator VN",
		"default_icon": "img/logo.png"
	},
	//
	"permissions": [
		"activeTab",
		"tabs"
	],

	"content_scripts": [

		//=======================================================================
		//============================== GAME ===================================
		//=======================================================================

		{
			"run_at": "document_end",
			"all_frames": true,
			"matches": [
				"*://v6p9d9t4.ssl.hwcdn.net/*"
			],
			"js": [
				"js/libs/jquery-3.2.1.min.js",
				"js/visual_novel/inject.js",
				"js/power_by.js"
			]
		},

		//=======================================================================
		//============================== TTS ====================================
		//=======================================================================

		//Vocalware
		{
			"run_at": "document_end",
			"all_frames": true,
			"matches": [
				"*://www.vocalware.com/index/demo"
			],
			"js": [
				"js/libs/jquery-3.2.1.min.js",
				"js/tts/vocalware.js",
				"js/power_by.js"
			]
		},


		//=======================================================================
		//============================ Translator ===============================
		//=======================================================================

		{
			"run_at": "document_end",
			"all_frames": true,
			"matches": [
				"https://www.freetranslation.com/*"
			],
			"js": [
				"js/libs/jquery-3.2.1.min.js",
				"js/translator/freetranslation.js",
				"js/power_by.js"
			]
		}

	],

	"web_accessible_resources": [
		"img/logo.png"
	]

}
